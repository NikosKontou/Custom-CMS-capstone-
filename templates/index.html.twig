<div class="col-12">
    {% for article in articles %}
        <div class="row">

            {#    display the image #}
            <img src="../assets/images/{{ article['header_image'] }}" class="header-image"/>
            {#    send the GET to article.php so it can be retrieved by the database #}
            <h2><a href="article.php?id={{ article['id'] }}">
                    {{ article['title'] }} </a>
            </h2>
            <span class="mb-5">
                {{ article['body'] }}
            </span>
        </div>

    {% endfor %}
</div>